# Example production env template for Testcraftworld
# Fill these values in your deployment platform (Coolify, Docker secrets, etc.)

# DATABASE_URL format: mysql://<user>:<password>@<host>:<port>/<database>
DATABASE_URL=mysql://<DB_USER>:<DB_PASSWORD>@<DB_HOST>:<DB_PORT>/<DB_NAME>
DATABASE_SSL_BYPASS=false

DATABASE_FALLBACK_TO_MEMORY=true

PORT=8000
NODE_ENV=production

# Admin token for API access (generate a secure random string)
ADMIN_TOKEN=<GENERATED_ADMIN_TOKEN>

# Test User Credentials (optional - remove in strict production)
TEST_ADMIN_USERNAME=testcraftworld
TEST_ADMIN_PASSWORD=<TEST_ADMIN_PASSWORD>
TEST_ADMIN_EMAIL=blogs_admin@example.com

TEST_AUTHOR_USERNAME=author
TEST_AUTHOR_PASSWORD=<TEST_AUTHOR_PASSWORD>
TEST_AUTHOR_EMAIL=author@example.com

# Session secret
SESSION_SECRET=<SESSION_SECRET>